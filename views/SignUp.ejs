    <input
      type="email"
      name="email"
      id="user-email"
      class="form-control"
      placeholder="Email address"
      required
      autofocus=""
    />
    <input
      type="password"
      name="password"
      id="user-pass"
      class="form-control"
      placeholder="Password"
      required
      autofocus=""
    />
    <input
      type="password"
      name="repeatPassword"
      id="user-repeatpass"
      class="form-control"
      placeholder="Repeat Password"
      required
      autofocus=""
    />

    <button class="btn btn-primary btn-block" type="submit">
      <i class="fas fa-user-plus"></i> Sign Up
    </button>
